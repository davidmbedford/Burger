<h1>Burger Buddy!</h1>

<h2>Burgers that you can eat!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>
      	{{this.burger_name}}

      	<button class="change-eaten" data-id="{{id}}">DEVOUR IT!</button>

      	<button class="delete-cat" data-id="{{this.id}}">DELETE!</button>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that you already ate!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>
      	{{this.burger_name}}

      	<button class="change-eaten" data-id="{{id}}">Go for Seconds... </button>

      	<button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> FreshnReady
  </div>

  <button type="submit">Add Burger</button>
</form>
